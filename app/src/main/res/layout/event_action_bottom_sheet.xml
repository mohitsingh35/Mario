<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="200dp"
    android:background="@drawable/bottom_sheet_bg"
    >


    <View
        android:layout_width="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@color/white"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        >

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:tint="@color/white" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sf_semibold"
                android:gravity="center"
                android:id="@+id/title"
                android:visibility="visible"
                android:layout_gravity="center"
                android:text="Enroll"
                android:textColor="@color/better_white"
                android:textSize="18dp" />

        </RelativeLayout>


        <ImageButton
            android:id="@+id/done_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/baseline_keyboard_arrow_down_24"
            app:tint="@color/dim_primary" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/card_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        >
        <androidx.cardview.widget.CardView

            android:layout_margin="8dp"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="@color/secondary_bg_lighter"
            android:layout_marginStart="2dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/event_ic"
                android:layout_width="124dp"
                android:layout_weight="1"
                android:layout_height="124dp"
                android:src="@drawable/profile_pic_placeholder"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:contentDescription="Item Icon"
                android:clipToOutline="true"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Android Workshop"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/sfbold"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_location_pin_24"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/venue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_light"
                        android:text="Computer Center, AB-1"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_calendar_today_24"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_light"
                        android:text="02 Nov, 2024"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_access_time_24"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_light"
                        android:text="4:00 PM"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_bg"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dive deep into the world of Android Development with hands on experience of industry grade applications "
        android:id="@+id/event_desc"
        android:maxLines="2"
        android:lines="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:textColor="@color/neutral400"
        android:textSize="14sp"
        android:fontFamily="@font/sf_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:paddingVertical="8dp"
        >
        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/confirm_button_enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            app:area_margin="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:icon_margin="12dp"
            app:bump_vibration="50"
            app:animation_duration="250"
            app:outer_color="@color/neutral800"
            app:inner_color="@color/white"
            app:border_radius="40dp"
            app:text="Enroll to event"
            app:text_style="bold"
            app:text_size="20sp"
            app:slider_height="60dp"
            app:slider_locked="false"
            app:bounce_on_start="true" />

        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/confirm_button_unenroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            app:area_margin="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:icon_margin="12dp"
            app:bump_vibration="50"
            app:animation_duration="250"
            app:outer_color="@color/neutral800"
            app:inner_color="@color/white"
            app:border_radius="40dp"
            app:text="Un-enroll from event"
            app:text_style="bold"
            app:text_size="20sp"
            app:slider_height="60dp"
            app:slider_locked="false"
            app:bounce_on_start="true" />
    </LinearLayout>
</LinearLayout>