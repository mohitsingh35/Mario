<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/white_curve_bg"
    android:orientation="vertical"
    android:layout_height="280dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Feedback"
        android:fontFamily="@font/sf_semibold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="10dp"
        android:id="@+id/btnContactAlok"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:weightSum="10"
        android:background="@drawable/hollow_button_bg"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/whatsapp_svgrepo_com"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Alok Ranjan"
            android:fontFamily="@font/sf_semibold"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/btnContactMohit"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="10"
        android:background="@drawable/hollow_button_bg"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/whatsapp_svgrepo_com"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Mohit Singh"
            android:fontFamily="@font/sf_semibold"
            android:textSize="16dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="By continuing you will be redirected to WhatsApp, explain your issue to the concerned person and we will get back to you shortly."
        android:fontFamily="@font/sfregular"
        android:layout_marginBottom="20dp"
        android:textColor="@color/better_white"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:gravity="center|bottom"/>

</LinearLayout>