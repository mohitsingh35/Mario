<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stripped_bg"
    android:layout_height="match_parent"
    tools:context=".UI.SurveyScreen.PersonalDetails.PersonalDetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:text="Technical Details"
        android:fontFamily="@font/catamaran_semibold"
        android:textColor="@color/better_white"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lines="1"
        android:layout_marginStart="20dp"
        android:id="@+id/interested_domains_et"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran_medium"
        android:textSize="14dp"
        android:textColorHint="@color/edit_text_hint"
        android:hint="Interested Domains, eg. web, design"
        android:inputType="textAutoComplete"
        android:paddingStart="15dp"
        android:textColor="@color/better_white"
        android:background="@drawable/edit_text_bg"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:id="@+id/known_programming_languages_et"
        android:layout_marginEnd="20dp"
        android:gravity="center|start"
        android:lines="1"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran_medium"
        android:textSize="14dp"
        android:textColorHint="@color/edit_text_hint"
        android:hint="Known Languages, eg. C, Python"
        android:inputType="textAutoComplete"
        android:paddingStart="15dp"
        android:textColor="@color/better_white"
        android:background="@drawable/edit_text_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:id="@+id/custom_et"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran_medium"
        android:textSize="14dp"
        android:textColorHint="@color/edit_text_hint"
        android:hint="Anything else you wish to add?"
        android:inputType="textAutoComplete"
        android:maxLines="2"
        android:lines="2"
        android:paddingStart="15dp"
        android:textColor="@color/better_white"
        android:background="@drawable/edit_text_bg"/>

    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/circle_grey"
        android:padding="12dp"
        android:id="@+id/btnBack"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/primary_bg" />


    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/catamaran_medium"
        android:gravity="center"
        android:text="Next"
        android:id="@+id/btnNext"
        android:layout_marginBottom="130dp"
        android:textColor="@color/better_white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>