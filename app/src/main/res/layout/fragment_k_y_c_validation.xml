<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/stripped_bg"
    android:layout_height="match_parent"
    tools:context=".UI.SurveyScreen.PersonalDetails.PersonalDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_semibold"
            android:gravity="center"
            android:text="KYC Validation"
            android:textColor="@color/better_white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sf_light"
            android:text="*This is crucial as to verify your identity and to maintain \nthe integrity of the platform"
            android:textColor="@color/edit_text_hint"
            android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sf_light"
            android:text="*Do upload the images before clicking on Create Account."
            android:textColor="@color/edit_text_hint"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:id="@+id/userDP"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/circle_grey"
                android:padding="2dp"
                android:src="@drawable/baseline_add_24"
                app:tint="@color/primary_bg" />


            <TextView
                android:id="@+id/linked_in_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/sf_medium"
                android:gravity="center|start"
                android:hint="Upload your photo"
                android:inputType="textAutoComplete"
                android:textColor="@color/better_white"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="14dp" />


        </LinearLayout>

        <include layout="@layout/photo_selected_item"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:id="@+id/userDPLayout"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:id="@+id/collegeID"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/circle_grey"
                android:padding="2dp"
                android:src="@drawable/baseline_add_24"
                app:tint="@color/primary_bg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/sf_medium"
                android:gravity="center|start"
                android:hint="Upload College ID"
                android:inputType="textAutoComplete"
                android:textColor="@color/better_white"
                android:textColorHint="@color/edit_text_hint"
                android:textSize="14dp" />


        </LinearLayout>

        <include layout="@layout/photo_selected_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/collegeIDlayout"/>

    </LinearLayout>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/circle_grey"
        android:padding="12dp"
        android:id="@+id/btnBack"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/primary_bg" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/sf_medium"
        android:gravity="center"
        android:id="@+id/btnNext"
        android:text="Create Account"
        android:layout_marginBottom="50dp"
        android:textColor="@color/better_white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>